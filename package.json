    "prettier": "^2.1.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "typescript": "^4.0.5",
    "webpack": "^4.44.2 <5.0.0",
    "webpack-cli": "^3.3.12 <5.0.0",
    "webpack-dev-server": "^3.11.0 <4.0.0"
  },
  "dependencies": {
    "async-retry": "^1.3.1"
