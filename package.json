{
  "name": "@stanlemon/react-couchdb-authentication",
  "version": "0.8.3",
  "description": "React component for authenticating against a CouchDB user db and syncing it locally with PouchDB.",
  "keywords": [
    "react",
    "pouchdb",
    "couchdb",
    "authentication",
    "app"
  ],
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest -w",
    "test:coverage": "jest --coverage",
    "lint": "eslint --ext js,jsx,ts,tsx ./src/ ./example/",
    "lint:format": "eslint --fix --ext js,jsx,ts,tsx ./src/ ./example/",
    "build": "rm -rf ./dist/** && tsc",
    "example": "WEBDEV_ENTRY=./example/Example.tsx webpack serve"
  },
  "author": "Stan Lemon <stanlemon@users.noreply.github.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/stanlemon/react-couchdb-authentication"
  },
  "license": "MIT",
  "peerDependencies": {
    "pouchdb": ">=7.1.0",
    "react": ">=17.0.0"
  },
  "devDependencies": {
    "@stanlemon/webdev": "^0.1.30",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.0.0",
    "@types/async-retry": "^1.4.3",
    "@types/isomorphic-fetch": "^0.0.36",
    "@types/jest": "^27.4.1",
    "@types/node": "^15.14.9",
    "@types/pouchdb": "^6.4.0",
    "@types/react": "^18.0.5",
    "@types/set-interval-async": "^1.0.0",
    "isomorphic-fetch": "^3.0.0",
    "pouchdb": "^7.3.0",
    "pouchdb-adapter-memory": "^7.3.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "async-retry": "^1.3.3",
    "buffer": "^6.0.3",
    "set-interval-async": "^2.0.3"
  }
}