{
  "name": "@stanlemon/react-couchdb-authentication",
  "version": "0.4.1",
  "description": "React component for authenticating against a CouchDB user db and syncing it locally with PouchDB.",
  "keywords": [
    "react",
    "pouchdb",
    "couchdb",
    "authentication",
    "app"
  ],
  "main": "./dist/index.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "rm -rf ./dist/** && tsc -d",
    "watch": "tsc -w",
    "test": "jest",
    "lint": "eslint --ext js,jsx,ts,tsx ./src/ ./example/",
    "example": "webpack-dev-server"
  },
  "author": "Stan Lemon <stanlemon@users.noreply.github.com>",
  "repository": {
    "type": "git",
    "url": "git://github.com/stanlemon/js-libs.git"
  },
  "license": "MIT",
  "browserslist": [
    "last 1 year, not dead",
    "edge > 18",
    "not ie 11",
    "not ie_mob 11",
    "not samsung < 1000",
    "not opera < 1000",
    "not kaios < 1000",
    "not android < 1000",
    "not and_qq < 1000"
  ],
  "jest": {
    "roots": [
      "./src/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/out/"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)?$": "babel-jest"
    }
  },
  "peerDependencies": {
    "pouchdb": "^7.2.2",
